<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_card_item_list"
    android:layout_height="@dimen/height_card_item_list"
    app:cardCornerRadius="@dimen/corner_radius_card_item_list"
    android:layout_marginTop="@dimen/margin_top_card_item_list"
    android:layout_marginStart="@dimen/margin_start_card_item_list"
    android:layout_marginEnd="@dimen/margin_end_card_item_list">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_character"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black_gray"
            android:scaleType="fitXY"
            android:src="@drawable/rick_sanchez"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="@dimen/width_card_view_id_character"
            android:layout_height="@dimen/height_card_view_id_character"
            android:layout_marginStart="@dimen/margin_start_card_view_id_character"
            android:layout_marginTop="@dimen/margin_top_card_view_id_character"
            android:padding="@dimen/padding_card_view_id_character"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="@dimen/corner_radius_card_view_id_character"
            app:layout_constraintStart_toStartOf="@+id/img_character"
            app:layout_constraintTop_toTopOf="@+id/img_character">

            <TextView
                android:id="@+id/txt_id_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                tools:text="1" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_blue"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5">

            <TextView
                android:id="@+id/txt_name_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rick Sanchez"
                android:textSize="@dimen/text_size_name_character"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin_start_name_character"
                android:layout_marginEnd="@dimen/margin_end_name_character"
                android:layout_marginTop="@dimen/margin_top_name_character"/>

            <TextView
                android:id="@+id/txt_status_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alive"
                android:textSize="@dimen/text_size_status_character"
                android:layout_marginStart="@dimen/margin_start_status_character"
                android:layout_marginEnd="@dimen/margin_end_status_character"
                android:layout_marginTop="@dimen/margin_top_status_character"
                android:layout_marginBottom="@dimen/margin_bottom_status_character"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>