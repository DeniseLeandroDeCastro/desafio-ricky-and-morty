<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_app"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="br.com.denisecastro.desafiorickandmorty.view.list.ListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <dialog
        android:id="@+id/filterFragment"
        android:name="br.com.denisecastro.desafiorickandmorty.view.filter.FilterFragment"
        android:label=""
        tools:layout="@layout/fragment_filter" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="br.com.denisecastro.desafiorickandmorty.view.detail.DetailFragment"
        android:label=""
        tools:layout="@layout/fragment_detail" />
</navigation>